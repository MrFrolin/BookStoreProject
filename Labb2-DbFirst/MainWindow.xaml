<Window
    x:Class="Labb2_DbFirst.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Labb2_DbFirst"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Labb2_DbFirst.Views"
    Title="MainWindow"
    Width="1000"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Name="StoreTab" Header="Store Stock">
                <views:StoreStockView />
            </TabItem>
            <TabItem Name="BooksAndAuthorTab" Header="Books and Author">
                <views:CRUD_BookAndAuthorView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
