<UserControl
    x:Class="Labb2_DbFirst.Views.StoreStockView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Labb2_DbFirst.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Content="Books" />
        <Button
            Name="LoadBooksInStock"
            Grid.Row="2"
            Grid.Column="1"
            Width="50"
            Height="20"
            Click="LoadBooksInStock_OnClick"
            Content="Load" 
            HorizontalAlignment="Left"
            Margin="70,0,0,10"/>
        <ListView
            Name="BooksView"
            Grid.Row="3"
            Grid.Column="1"
            SelectionChanged="BooksView_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="255"
                        DisplayMemberBinding="{Binding Title}"
                        Header="Title" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Language}"
                        Header="Language" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding ReleaseDate}"
                        Header="Release date" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Name="AddToStoreBtn"
                Grid.Column="0"
                Width="100"
                HorizontalAlignment="Right"
                Click="AddToStoreBtn_OnClick"
                Content="Add To Store" />
            <Label
                Grid.Column="1"
                HorizontalAlignment="Right"
                Content="Quantity" />
            <TextBox
                Name="QtyBox"
                Grid.Row="0"
                Grid.Column="2"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center" />
        </Grid>
        <ComboBox
            Name="StoresComboBox"
            Grid.Row="2"
            Grid.Column="3"
            Width="150"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            DisplayMemberPath="StoreName"
            IsEditable="True"
            IsReadOnly="True"
            ItemsSource="{Binding StoreName}"
            SelectionChanged="StoresComboBox_OnSelectionChanged"
            Text="-- Select Store --" />
        <ListView
            Name="StoreStock"
            Grid.Row="3"
            Grid.Column="3"
            SelectionChanged="StoreStock_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="250"
                        DisplayMemberBinding="{Binding Isbn.Title}"
                        Header="Title"/>
                    <GridViewColumn
                    Width="50"
                    DisplayMemberBinding="{Binding Isbn.Price}"
                    Header="Price" />
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding StockBalance}"
                        Header="Quantity" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="5" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Name="RemoveFromSelectedStore"
                Grid.Column="0"
                Width="100"
                HorizontalAlignment="Right"
                Click="RemoveFromSelectedStore_OnClick"
                Content="Remove" />
            <Label
                Grid.Column="1"
                HorizontalAlignment="Right"
                Content="Stock" />
            <TextBox
                Name="StockBox"
                Grid.Row="0"
                Grid.Column="2"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center" />
            <Button
                Name="StockUpdBtn"
                Grid.Column="3"
                Width="70"
                HorizontalAlignment="Left"
                Click="StockUpdBtn_OnClick"
                Content="Update" />
        </Grid>
    </Grid>
</UserControl>
